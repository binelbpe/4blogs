const sendResponse = (res, statusCode, data, message = "") => {
  const response = {
    success: statusCode >= 200 && statusCode < 300,
    message,
    data,
  };

  if (process.env.NODE_ENV === "development") {
    response.timestamp = new Date().toISOString();
  }

  res.status(statusCode).json(response);
};

module.exports = {
  sendResponse,
};
